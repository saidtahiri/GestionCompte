<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="6dp"
    android:padding="30dp">




    <TextView
        android:id="@+id/montantTextView"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="0.00"
        android:layout_marginVertical="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        />





    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:text="Montant"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/montantEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:hint="Entrer Le montant a credit ou a debiter"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCrediter"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:text="Crediter"/>
        <Button
            android:id="@+id/btnDebiter"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:text="Debiter"/>

    </LinearLayout>


</LinearLayout>
